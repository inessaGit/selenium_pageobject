<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite of tests" parallel="none">

<listeners>
    <listener class-name="util.DefaultTestListener"/>     
</listeners>

<groups>
    <run>
      <exclude name="in progress"  />
    </run>
  </groups>

       <test name="UI Tests">
              <classes>    
                <class name= "test.BasePageTest"/>
                <class name= "test.AboutPageTest"/>
                
              </classes>
      
       </test>

       <test name="Functional Tests">
              <packages>
                  <package name="test.functional" />
              </packages>

       </test>      
  
</suite>
